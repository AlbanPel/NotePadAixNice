<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        app:title="Détail de ma note"
        />
    
    <EditText
        android:id="@+id/title_view_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        style="@style/NoteTitleFont"
        android:hint="Titre de la note"
        />
    <EditText
        android:id="@+id/text_view_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_view_detail"
        android:hint="Détail de la note"
        style="@style/DetailStyle"
         />

</RelativeLayout>